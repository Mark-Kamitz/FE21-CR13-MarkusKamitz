{% extends 'base.html.twig' %}

{% block title %}Details{% endblock %}

{% block body %}

    <div class="container">
        <div class="  col-sm-10 offset-sm-1 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
            <div class="card mb-4 border-0 my-5  " >
                <div class="card-body shadow bg-light rounded-3 bg-light">
                    <h5 class="card-title text-center ">{{ event.name }}</h5>
                    <p class="text-center fw-light fs-6">{{event.date | date('F j, Y, g:i a')}}</p>
                    <p class="d-flex justify-content-center">
                        <img src="{{ event.image }}" class="style2" alt="...">
                    </p>
                    <div class="card-text ms-4 ">
                        <p class="text-center fw-light">{{ event.description }}</p>
                        <p class="m-0 mt-4"><span class="fw-bold">Capacity:</span> {{ event.capacity }} People</p>
                        <p class="m-0 "><span class="fw-bold">Email:</span> {{ event.email }}</p>
                        <p class="m-0 "><span class="fw-bold">Phone:</span> {{ event.phone }}</p>
                        <p class="m-0 "><span class="fw-bold">Address:</span> {{ event.address }}</p>
                        <p class="m-0 "><span class="fw-bold">URL:</span> {{ event.url }}</p>
                        <p class="m-0 "><span class="fw-bold">Type:</span> {{ event.type }}</p>
                    </div>
                    <div class="d-flex justify-content-center my-3">
                        <a href="/edit/{{ event.id }}"><button class="btn btn-outline-success btn-sm fw-light rounded-circle mx-2" title="edit"><i class='far fa-edit'></i></button></a>
                        <a href="/delete/{{ event.id }}" onclick="return confirm('Are you sure you want to delete this?')"  class="btn btn-outline-danger btn-sm fw-light rounded-circle mx-2"><i class='far fa-trash-alt'></i></a>  
                    </div>
                </div>
            </div>
        </div>  
    </div>

{% endblock %}