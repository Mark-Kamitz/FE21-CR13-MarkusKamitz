{% extends 'base.html.twig' %}

{% block title %}BIG Events{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h2 class="text-center mt-2 mb-5 fw-light"> Latest Events</h2>
    
        <div class="row">
            {% for event in events %}
                <div class="col-10 offset-1 col-sm-6 offset-sm-0 col-md-4 offset-md-0">
                    <div class="card mb-4 border-0 h-100 " >
                        
                        <div class="card-body shadow bg-light rounded-3 mb-5 bg-light">
                            <h5 class="card-title text-center ">{{ event.name }}</h5>
                            <div class="d-flex justify-content-center">
                                <img src="{{ event.image }}" class="card-img-top  mb-2 mt-2 style"  alt="...">
                            </div>
                            <p class="card-text text-center mb-4">{{event.date | date('F j, Y, g:i a')}}</p>
                            <div class="d-flex justify-content-center ">
                                <a href="/edit/{{ event.id }}"><button class="btn btn-outline-success btn-sm fw-light rounded-circle mx-2" title="edit"><i class='far fa-edit'></i></button></a>
                                <a href="/details/{{ event.id }}" class="btn btn-outline-warning btn-sm fw-light rounded-circle"><i class='fas fa-info-circle'></i></a>
                                <a href="/delete/{{ event.id }}" onclick="return confirm('Are you sure you want to delete this?')" class="btn btn-outline-danger btn-sm fw-light rounded-circle mx-2"><i class='far fa-trash-alt'></i></a> 
                                
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
