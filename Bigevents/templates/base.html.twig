<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        
        <script src="https://kit.fontawesome.com/868526a5f8.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <div style="height:40px;"></div>
        <nav class="navbar navbar-expand-sm navbar-light bg-light shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Big Events</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                    <a class="nav-link "  href="/">Home</a>
                    </li>
                    <li class="nav-item">
                    <a class="nav-link" href="/create">Create</a>
                    </li>
                    <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Select Events
                    </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <li><a class="dropdown-item" href="/index/Space">Space</a></li>
                            <li><a class="dropdown-item" href="/index/Music">Music</a></li>
                            <li><a class="dropdown-item" href="/index/Sport">Sport</a></li>
                            <li><a class="dropdown-item" href="/index/Theater">Theater</a></li>
                            <li><a class="dropdown-item" href="/index/Dance">Dance</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="/">Select All</a></li>  
                        </ul>
                    </li>
                </ul>
                </div>
            </div>
        </nav>

        <img src="{{ asset('img/celebration.jpeg') }}" class="img-fluid mt-3">

         {% for message in app.flashes('notice') %}
            <div class="alert alert-success">
            {{ message }}
            </div>
        {% endfor %}

         {% block body %}{% endblock %}
        <div style="height:40px;"></div>
        <div class=" footer d-flex justify-content-center align-items-center bg-dark text-white fs-5 p-3 mt-2 fixed-bottom" >
            <div class="mx-2"><i class="fab fa-twitter"></i></div> <div class="mx-2"><i class="fab fa-linkedin-in"></i> </div>
            <div class="mx-2"><i class="fab fa-facebook"></i></div><div class="mx-2"> <i class="fab fa-youtube"></i> </div>
            <div class="mx-2"><i class="fab fa-skype"></i></div><div class="mx-2"> <i class="fab fa-flickr"></i></div>
            <div class="mx-2"> <i class="fab fa-twitch"></i> </div><div class="mx-2"><i class="fab fa-tumblr"></i></div>
        </div>
       

        
         <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    </body>
</html>
